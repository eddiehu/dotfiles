! Fonts
URxvt.font:                 xft:Roboto Mono for Powerline:size=12:medium
URxvt.boldFont:             xft:Roboto Mono for Powerline:size=12:bold
URxvt.italicFont:           xft:Roboto Mono for Powerline:size=12:italic
URxvt.boldItalicFont:       xft:Roboto Mono for Powerline:size=12:bold:italic
URxvt.letterSpace:          0

! Borders
URxvt.internalBorder:      25
URxvt.externalBorder:      0

! Scrolling
URxvt.scrollBar:            false
URxvt.scrollTtyOutput:      false
URxvt.scrollWithBuffer:     true
URxvt.scrollTtyKeypress:    true

! COLOR SCHEME

! hard contrast: *background: #1d2021
*background: #282828
! soft contrast: *background: #32302f
*foreground: #ebdbb2
! Black + DarkGrey
*color0:  #282828
*color8:  #928374
! DarkRed + Red
*color1:  #cc241d
*color9:  #fb4934
! DarkGreen + Green
*color2:  #98971a
*color10: #b8bb26
! DarkYellow + Yellow
*color3:  #d79921
*color11: #fabd2f
! DarkBlue + Blue
*color4:  #458588
*color12: #83a598
! DarkMagenta + Magenta
*color5:  #b16286
*color13: #d3869b
! DarkCyan + Cyan
*color6:  #689d6a
*color14: #8ec07c
! LightGrey + White
*color7:  #a89984
*color15: #ebdbb2

! EXTENSIONS
! extension files are located at /usr/lib/urxvt/perl
! URxvt.perl-ext-common:  default,fullscreen,matcher,resize-font

! Open URLs with Chrome
URxvt.urlLauncher:      google-chrome
URxvt.matcher.button:   1

! Set up fullscreen toggle
URxvt.keysym.F11:       perl:fullscreen:switch
